if __name__ =='__main__':

    fs = 44100


    hrir_l = load_CIPIC_HRIP('left')
    hrir_r = load_CIPIC_HRIP('right')

    hrir = np.zeros((200, 100))
    print(hrir_r.shape)
    print(hrir_l.shape)
    for i in range(50):
        hrir[:, i * 2] = hrir_l[i]
        hrir[:, i * 2 + 1] = hrir_r[i]

    out =audio_with_brir(hrir)

    wavfile.write('OUTnokia.wav',44100,out)
